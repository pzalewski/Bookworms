@model IEnumerable<Bookworms.ViewModel.BookVM>

@{
    ViewBag.Title = "Bookworms - wykaz książek";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Wykaz książek</h2>

<table>
    <tr>
        <th>
            Tytuł   
        </th>
        <th>
            Autor
        </th>
        <th>
            Gatunek
        </th>
        <th>
            Data dodania
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GenreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddDate)
        </td>
        <td>
            @*@Html.ActionLink("Edycja", "Edit", new { id=item.IdBook }) |*@
            @Html.ActionLink("Recenzja", "Details", new { id=item.IdBook }) 
        </td>
    </tr>
}

</table>
