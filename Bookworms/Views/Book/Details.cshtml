@model Bookworms.ViewModel.BookVM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Recenzja książki: @Model.Title - @Model.Author</h2>

<fieldset>
    <legend>Recenzje</legend>

    @if (Model.Reviews.Count == 0)
    {
        <p>Obecnie jeszcze nikt nie zamieścił recenzji tej książki. Może będziesz pierwszy???</p>
    }
    else
    {
        foreach (Bookworms.Models.Review r in Model.Reviews)
        {
            <fieldset>
                <legend>@r.Author: @r.Title - @r.CreateDate.ToShortDateString()</legend>
                <p>@r.Content</p>
            </fieldset>
        }
    }
</fieldset>
<p>
    @Html.ActionLink("Dodaj recenzję", "Add", "Review", new { id=Model.IdBook }, null) |
    @Html.ActionLink("Powrót do wykazu książek", "Index")
</p>
